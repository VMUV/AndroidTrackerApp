<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.clokey.shasta.motusapp.MainActivity"
    android:background="@color/colorPrimaryDark">

    <ImageView
        android:id="@+id/logo_home"
        android:src="@drawable/vmuv_logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_weight="2"
        android:background="@color/colorPrimary"/>

    <ImageView
        android:id="@+id/motus_platform"
        android:src="@drawable/motus_modular_wedge"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_weight="2"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/tracker_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/tracker_app"
        android:gravity="center"
        android:fontFamily="monospace"
        android:textColor="@color/vmuvBlue"
        android:textSize="16sp"
        android:padding="16dp"/>

